<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hongyan.hytotal"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 选择图片功能 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <!-- 用于申请获取蓝牙信息进行室内定位 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:name="com.hongyan.hytotal.BaseApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hongyan.hytotal.model.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hongyan.hytotal.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
        <!-- 适配方案 -->
        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="640" />

        <activity android:name="com.hongyan.hytotal.model.wanandroid.WanAndroidActivity" />
        <activity android:name="com.hongyan.hytotal.model.wanandroid.activity.WanAndroidItemDataActivity" />
        <activity android:name="com.hongyan.hytotal.model.pay.PayActivity" />
        <activity android:name="com.hongyan.hytotal.model.scaner.ScannerCodeActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.BaseCustomViewActivity" />
        <activity android:name="com.hongyan.hytotal.model.multiple.MultipleItemActivity" />
        <activity android:name="com.hongyan.hytotal.model.LateralSpreadActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.CustomView01Activity" />
        <activity
            android:name="com.hongyan.hytotal.model.PubActivity"
            android:theme="@style/PubTheme" />
        <activity android:name="com.hongyan.hytotal.model.WebViewActivity" />
        <activity android:name="com.hongyan.hytotal.model.contactview.AddressSortActivity" />
        <activity android:name="com.hongyan.hytotal.model.PasswordInputActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.camera.CameraActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.camera.PicturePreviewActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.camera.VideoPreviewActivity" />
        <!-- 定位方法列表 -->
        <activity android:name="com.hongyan.hytotal.model.positioning.PositioningActivity" />
        <activity android:name="com.hongyan.hytotal.model.positioning.GpsActivity" />
        <activity android:name="com.hongyan.hytotal.model.positioning.GaodeActivity" />
        <activity android:name="com.hongyan.hytotal.model.positioning.BaiduActivity" />
        <!-- 选择图片 -->
        <activity android:name="com.hongyan.hytotal.model.img.SelectImageActivity" />
        <!-- 轮询方法 -->
        <activity android:name="com.hongyan.hytotal.model.polling.PollingActivity" />
        <!-- 分享 -->
        <activity android:name="com.hongyan.hytotal.model.ShareActivity" />
        <activity android:name="com.hongyan.hytotal.model.MarqueeViewActivity" />
        <activity android:name="com.hongyan.hytotal.model.greenknife.GreenKnifeActivity" />
        <activity android:name="com.hongyan.hytotal.model.knowpreview.KnowPreviewActivity" />
        <activity android:name="com.hongyan.hytotal.model.custom.pagerlv.PageRecyclerViewActivity" />
        <activity android:name="com.hongyan.hytotal.model.ShopActivity" />
        <activity android:name="com.hongyan.hytotal.model.transformerslayout.TransformersLayoutActivity" />
        <activity android:name="com.hongyan.hytotal.model.draganddrop.DragAndDropActivity" />

        <!-- 高德定位key -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="4fe53d819ce174c0be2d886f614dc980" />

        <service android:name="com.amap.api.location.APSService" />
        <!-- 百度定位 -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="AvD4ntkQQ9aQejaoY5V6uCDcoFQT7ae7" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <!-- android:authorities="${application}.provider" -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.hongyan.hytotal.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
